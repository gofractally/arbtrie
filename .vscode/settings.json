{
 "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.tabSize": 3,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
    },
    "vim.leader":"<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<space>"],
            "commands": ["cursorWordStart"]
        },
        // Navigation
        { "before": ["<S-h>"], "commands": ["cursorLeftSelect"] },
        { "before": ["<S-l>"], "commands": ["cursorRightSelect"] },
        { "before": ["<S-j>"], "commands": ["cursorDownSelect"] },
        { "before": ["<S-k>"], "commands": ["cursorUpSelect"] },
        // Splits
        { "before" : ["leader", "v"], "commands": [":vsplit"] },
        { "before" : ["leader", "s"], "commands": [":split"] },
        { "before" : ["leader", "x"], "commands": [":close"] },
        { "before" : ["leader", "q"], "commands": [":q"] },
        { "before" : ["leader", "w"], "commands": [":w"] }
    ],
    "files.associations": {
        "__config": "cpp",
        "__debug": "cpp",
        "atomic": "cpp",
        "cstdint": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "optional": "cpp",
        "stdexcept": "cpp",
        "string_view": "cpp",
        "thread": "cpp",
        "vector": "cpp",
        "__bit_reference": "cpp",
        "__errc": "cpp",
        "__hash_table": "cpp",
        "__locale": "cpp",
        "__mutex_base": "cpp",
        "__node_handle": "cpp",
        "__split_buffer": "cpp",
        "__threading_support": "cpp",
        "__tree": "cpp",
        "__verbose_abort": "cpp",
        "array": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "charconv": "cpp",
        "cinttypes": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "complex": "cpp",
        "condition_variable": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
